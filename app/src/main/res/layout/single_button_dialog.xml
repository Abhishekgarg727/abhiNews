<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

        <LinearLayout
            android:id="@+id/rlDailog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/default_popup"
            android:gravity="center"
            android:orientation="vertical">

            <com.abhishek.news.customViews.textView.SemiBoldText
                android:id="@+id/tvHeadingText"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:textColor="@color/black"
                tools:text="@string/oops" />

            <com.abhishek.news.customViews.textView.MediumText
                android:id="@+id/tvDescriptionText"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="@color/black"
                tools:text="@string/something_went_wrong_at_our_side" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/dialog_view_line_color" />

            <com.abhishek.news.customViews.textView.SemiBoldText
                android:id="@+id/tvOk"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/okay"
                android:textColor="@color/facebook_color" />
        </LinearLayout>

</layout>
