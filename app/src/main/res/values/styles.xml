<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="headingSplashTextView" parent="@style/TextAppearance.AppCompat.Headline" />

    <style name="mediumTextView" parent="@style/TextAppearance.AppCompat.Medium" />

    <style name="smallTextView" parent="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />

    <style name="smallTextView1" parent="@style/TextAppearance.AppCompat.Body1" />

    <style name="smallTextView2" parent="@style/TextAppearance.AppCompat.Caption" />

</resources>
